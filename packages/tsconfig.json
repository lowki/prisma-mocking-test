{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "node",
    "target": "ES2017",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/core/*": ["./core/*"]
    }
  }
}
